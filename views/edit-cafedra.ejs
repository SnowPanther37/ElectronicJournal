<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/head.ejs') %>
<body>
  <%- include ('./partials/nav.ejs') %>
  <form id="post-form" method='post' action="/edit/<%= cafedra.id %>?_method=PUT">
    <div class="form-info">
      <label>Название кафедры
        <input type="text" name="title" value="<%= cafedra.title %>">
      </label>
      <label>Декан
        <input type="text" name="dekan" value="<%= cafedra.dekan %>">
      </label>
      <label>Направление
        <input type="text" name="direction" value="<%= cafedra.direction %>">
      </label>
    </div>
    <div class="form-text">
      <label>Описание кафедры
        <textarea name="text"><%= cafedra.text %></textarea>
      </label>
    </div>
    <div class="form-button">
      <input type="submit" value="Подтвердить">
    </div>
  </form>
</body>
</html>

  <form id="post-form" method='post' action="/add-cafedra">
    <div class="form-group col-md-6" style="margin-top: 60px;">
      <label style="color: white; margin-left: 20px; font-weight: bold; font-size: 20px;letter-spacing: 1px;">Название кафедры
        <input id="text" class="form-control" style="width: 300px; border-radius: 10px;" placeholder="Введите название кафедры..." type="text" name="title" >
      </label>
    </div>
      <div class="form-group col-md-6">
      <label style="color: white; margin-left: 20px; font-weight: bold; font-size: 20px;letter-spacing: 1px;">Декан
        <input id="text" class="form-control" style="width: 300px; border-radius: 10px;" placeholder="Введите ФИО декана..." type="text" name="dekan">
      </label>
    </div>
    <div class="form-group col-md-6">
      <label style="color: white; margin-left: 20px; font-weight: bold; font-size: 20px;letter-spacing: 1px;">Направление
        <input id="text" class="form-control" style="width: 350px; border-radius: 10px;" placeholder="Введите направление кафедры..." type="textDirection" name="direction">
      </label>
    </div>
    <div class="form-group col-md-6" class="form-text">
      <label style="color: white; margin-left: 20px; font-weight: bold; font-size: 20px;letter-spacing: 1px;">Описание кафедры
        <textarea id="texth" class="form-control" style="width: 1000px; border-radius: 10px;" placeholder="Введите описание кафедры..." name="text"></textarea>
      </label>
    </div>
    <button type="submit" class="btn btn-primary mt-3" >Подтвердить</button>
  </form>
